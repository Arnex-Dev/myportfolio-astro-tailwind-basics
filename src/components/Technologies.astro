---
import TailwindIcon from "./icons/Tailwind.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import PHPIcon from "./icons/PHP.astro";
import MySQLIcon from "./icons/MySQL.astro";

enum TechnologyType {
  Frontend = 1,
  Backend = 2,
  Database = 3,
  Other = 4,
}
const technologies = [
    {
      name: 'HTML',
      icon: HTMLIcon,
      colorClasses: 'bg-orange-600/90 dark:bg-orange-500/40',
      type: TechnologyType.Frontend
    },
    {
      name: 'CSS',
      icon: CSSIcon,
      colorClasses: 'bg-blue-500 dark:bg-blue-500/40',
      type: TechnologyType.Frontend
    },
  {
    name: 'JavaScript',
    icon: JavaScriptIcon,
    colorClasses: 'bg-yellow-500 dark:bg-yellow-300/40',
    type: TechnologyType.Frontend
  },
  {
    name: "Astro",
    icon: AstroIcon,
    colorClasses: "bg-gray-900 dark:bg-gray-900/90",
    type: TechnologyType.Frontend,
  },
  {
    name: "Tailwind",
    icon: TailwindIcon,
    colorClasses: "bg-[#003159] dark:bg-[#003159]",
    type: TechnologyType.Frontend,
  },
  {
    name: "PHP",
    icon: PHPIcon,
    colorClasses: "bg-[#474A8A] dark:bg-[#474A8A]/90",
    type: TechnologyType.Backend,
  },
  {
    name: "MySQL",
    icon: MySQLIcon,
    colorClasses: "bg-[#F8B227] dark:bg-[#F8B227]/30",
    type: TechnologyType.Database,
  }
];
---

<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
  {
    technologies.map((technology) => (
      <div
        class={`flex flex-col items-center justify-center p-4 transition-all duration-300 ${technology.colorClasses} hover:scale-105 rounded-lg shadow-md`}
      >
        <technology.icon className="size-12" />
        <span class="mt-2 text-sm font-semibold text-white">
          {technology.name}
        </span>
      </div>
    ))
  }
</div>