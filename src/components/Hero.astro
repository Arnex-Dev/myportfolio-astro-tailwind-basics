---
const personalImageAlt = "Jose Ángel";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="../public/arnexphoto.jpg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy ArnexDev
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-violet-500 [&>strong]:text-violet-800 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong
      >Desarrollador Web y Estudiante de Ingeniería de Software.</strong
    > De Puerto Vallarta, Jalisco, México. Especializado en crear aplicaciones impresionantes.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:mrankex.dev@gmail.com">
      <MailIcon class="size-5" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/">
      <LinkedInIcon class="size-5" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/Arnex-Dev">
      <GitHubIcon class="size-5" />
      GitHub
    </SocialPill>
  </nav>
</div>