---
import { Image } from "astro:assets";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
import HTMLIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSS.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import PHPIcon from "./icons/PHP.astro";
import MySQLIcon from "./icons/MySQL.astro";

const tags = {
  astro: {
    name: "Astro",
    class: "bg-gray-900 dark:bg-gray-900/90 text-white",
    icon: AstroIcon,
  },
  tailwind: {
    name: "Tailwind",
    class: "bg-[#003159] dark:bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-600 dark:bg-orange-500/40 text-white",
    icon: HTMLIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 dark:bg-blue-500/40 text-white",
    icon: CSSIcon,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-yellow-500 dark:bg-yellow-300/40 text-white",
    icon: JavaScriptIcon,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#474A8A] dark:bg-[#474A8A]/90 text-white",
    icon: PHPIcon,
  },
  MySQL: {
    name: "MySQL",
    class: "bg-[#F8B227] dark:bg-[#F8B227]/30 text-white",
    icon: MySQLIcon,
  },
};

const projects = [
  {
    title:
      "UnidenStore - Una página web para la venta de artículos universitarios",
    description:
      "Una página web para una empresa que vende artículos universitarios cuenta con la información de la empresa así como secciones de preguntas frecuentes, modales y formularios de contacto.",
    link: "https://unidenstore.com",
    github: "#",
    image: "/public/projects/uniden.webp",
    tags: [tags.HTML, tags.CSS, tags.JavaScript],
  }
];
---

<div class="flex flex-col gap-y-16">
  {
    projects.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>